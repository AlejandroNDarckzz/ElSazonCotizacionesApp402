@page "/carrito"
@using ElSazonCotizacionesApp.Contracts
@inject ICarritoService CarritoService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Carrito de Cotización</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🛒 Carrito de Cotización</h2>
        <a href="/catalogo" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Seguir comprando
        </a>
    </div>

    @if (!items.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size: 5rem; color: #ccc;"></i>
            <h3 class="mt-3">Tu carrito está vacío</h3>
            <p class="text-muted">Agrega productos desde el catálogo</p>
            <a href="/catalogo" class="btn btn-primary mt-3">
                <i class="bi bi-shop"></i> Ver Catálogo
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Productos Seleccionados</h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in items)
                        {
                            <div class="row align-items-center border-bottom p-3">
                                <div class="col-md-2">
                                    @if (item.Imagen != null)
                                    {
                                        <img src="data:@item.TipoImagen;base64,@Convert.ToBase64String(item.Imagen)"
                                             class="img-fluid rounded"
                                             style="width: 80px; height: 80px; object-fit: cover;"
                                             alt="@item.NombreProducto" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center"
                                             style="width: 80px; height: 80px;">
                                            <i class="bi bi-image text-white fs-3"></i>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-3">
                                    <h6 class="mb-1">@item.NombreProducto</h6>
                                    <small class="text-muted">$@item.Precio.ToString("N2") c/u</small>
                                </div>

                                <div class="col-md-3">
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary" type="button" @onclick="() => DisminuirCantidad(item.ProductoId)">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="text" class="form-control text-center fw-bold" value="@item.Cantidad" readonly style="max-width: 60px;" />
                                        <button class="btn btn-outline-secondary" type="button" @onclick="() => AumentarCantidad(item.ProductoId)">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="col-md-3 text-end">
                                    <h6 class="text-primary mb-0">$@item.Subtotal.ToString("N2")</h6>
                                </div>

                                <div class="col-md-1 text-end">
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => EliminarItem(item.ProductoId)" title="Eliminar producto">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">💵 Resumen</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>$@subtotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>IVA (16%):</span>
                            <strong>$@iva.ToString("N2")</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="mb-0">Total:</h5>
                            <h4 class="text-primary mb-0">$@total.ToString("N2")</h4>
                        </div>

                        <button class="btn btn-outline-danger w-100" @onclick="LimpiarCarrito">
                            <i class="bi bi-trash"></i> Limpiar Carrito
                        </button>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title">📊 Desglose de Productos</h6>
                        <ul class="list-unstyled mb-0 small">
                            @foreach (var item in items)
                            {
                                <li class="mb-2 pb-2 border-bottom">
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">@item.Cantidad x @item.NombreProducto</span>
                                        <span class="fw-bold">$@item.Subtotal.ToString("N2")</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h4 class="mb-0">📄 Cotización - El Sazón</h4>
                            </div>
                            <div class="col-md-6 text-end">
                                <button class="btn btn-light btn-sm" onclick="window.print()">
                                    <i class="bi bi-printer"></i> Imprimir
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Fecha:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
                                <p class="mb-1"><strong>Hora:</strong> @DateTime.Now.ToString("HH:mm")</p>
                            </div>
                            <div class="col-md-6 text-end">
                                <p class="mb-1"><strong>Folio:</strong> COT-@DateTime.Now.ToString("yyyyMMddHHmmss")</p>
                                <p class="mb-1"><strong>Válida por:</strong> 7 días</p>
                            </div>
                        </div>

                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Precio Unit.</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in items)
                                {
                                    <tr>
                                        <td>@item.NombreProducto</td>
                                        <td class="text-center">@item.Cantidad</td>
                                        <td class="text-end">$@item.Precio.ToString("N2")</td>
                                        <td class="text-end">$@item.Subtotal.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                    <td class="text-end"><strong>$@subtotal.ToString("N2")</strong></td>
                                </tr>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end"><strong>IVA (16%):</strong></td>
                                    <td class="text-end"><strong>$@iva.ToString("N2")</strong></td>
                                </tr>
                                <tr class="table-success">
                                    <td colspan="3" class="text-end"><h5 class="mb-0">TOTAL:</h5></td>
                                    <td class="text-end"><h5 class="text-success mb-0">$@total.ToString("N2")</h5></td>
                                </tr>
                            </tfoot>
                        </table>

                        <div class="text-muted text-center mt-3">
                            <small>Gracias por su preferencia | El Sazón Cotizaciones</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>