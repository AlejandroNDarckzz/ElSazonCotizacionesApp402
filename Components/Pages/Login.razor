@page "/login"
@using ElSazonCotizacionesApp.Contracts
@inject IUsuarioLoginService UsuarioLoginService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Login</PageTitle>

<div class="container mt-5">
    <div class="card" style="max-width: 400px; margin: auto;">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <EditForm Model="@model" OnValidSubmit="IniciarSesion" FormName="LoginForm">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label>Correo</label>
                    <InputText @bind-Value="model.Correo" class="form-control" type="email" />
                    <ValidationMessage For="@(() => model.Correo)" />
                </div>

                <div class="mb-3">
                    <label>Contraseña</label>
                    <InputText @bind-Value="model.Password" class="form-control" type="password" />
                    <ValidationMessage For="@(() => model.Password)" />
                </div>

                @if (!string.IsNullOrEmpty(mensaje))
                {
                    <div class="alert alert-danger">
                        @mensaje
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
            </EditForm>

            <div class="mt-3 text-center">
                <a href="/registro">¿No tienes cuenta? Regístrate</a>
            </div>

            <div class="mt-2 text-center">
                <a href="/recuperarcontrasena">¿Olvidaste tu contraseña?</a>
            </div>
        </div>
    </div>
</div>

